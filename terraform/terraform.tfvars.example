# ============================================================================
# TERRAFORM VARIABLES CONFIGURATION - ESTILO SIMPLIFICADO
# ============================================================================
# Copia este archivo a terraform.tfvars y completa con tus valores reales
# NUNCA subas terraform.tfvars a Git - está en .gitignore por seguridad

# ============================================================================
# REQUIRED VARIABLES - COMPLETAR OBLIGATORIAMENTE
# ============================================================================

# Tu Project ID de Google Cloud (como "awesome-lotus-472520-f0")
project_id = "tu-project-id-aqui"

# Región donde desplegar
region = "us-central1"

# ============================================================================
# APPLICATION CONFIGURATION
# ============================================================================

# Nombre base para todos los recursos
app_name = "babysitter-app"

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================

# Nombre de la base de datos MySQL
database_name = "BabysitterApp"

# Usuario de la base de datos
database_user = "babysitter_user"

# Contraseña de la base de datos (CAMBIAR POR UNA SEGURA)
database_password = "tu_contraseña_segura_123!"

# Tier de la instancia Cloud SQL
db_tier = "db-f1-micro"

# ============================================================================
# SECURITY CONFIGURATION
# ============================================================================

# JWT Secret Key (mínimo 32 caracteres)
jwt_secret_key = "tu_jwt_secret_key_super_seguro_de_32_caracteres_minimo"

# Protección contra eliminación (false para desarrollo, true para producción)
enable_deletion_protection = false

# ============================================================================
# CLOUD RUN CONFIGURATION (OPCIONAL - Usar valores por defecto)
# ============================================================================

# Recursos para servicios (descomentar si quieres cambiar)
# backend_cpu = "1000m"
# backend_memory = "512Mi"
# frontend_cpu = "1000m"
# frontend_memory = "512Mi"

# Escalado automático
# min_instances = 0
# max_instances = 10

# Tags de imágenes Docker
# backend_image_tag = "latest"
# frontend_image_tag = "latest"

# ============================================================================
# EXAMPLE CONFIGURATIONS
# ============================================================================

# DEVELOPMENT EXAMPLE:
# project_id = "mi-proyecto-dev-123456"
# app_name = "babysitter-dev"
# database_password = "dev_password_123!"
# jwt_secret_key = "dev_jwt_secret_key_32_characters_long"
# enable_deletion_protection = false

# PRODUCTION EXAMPLE:
# project_id = "mi-proyecto-prod-789012"
# app_name = "babysitter-prod"
# database_password = "super_secure_prod_password_456!"
# jwt_secret_key = "prod_jwt_secret_very_secure_64_chars_long_key_here"
# db_tier = "db-g1-small"
# enable_deletion_protection = true

# ============================================================================
# CLOUD RUN CONFIGURATION
# ============================================================================

# Recursos para el backend
backend_cpu = "1000m"
backend_memory = "512Mi"

# Recursos para el frontend
frontend_cpu = "1000m"
frontend_memory = "512Mi"

# Escalado automático
min_instances = 0
max_instances = 10

# ============================================================================
# NETWORKING CONFIGURATION
# ============================================================================

# CIDR para la VPC principal
vpc_cidr = "10.0.0.0/24"

# CIDR para el conector VPC
connector_cidr = "10.8.0.0/28"

# IPs permitidas para acceso a la base de datos
# Para producción, restringir a IPs específicas
allowed_ips = ["0.0.0.0/0"]

# ============================================================================
# SECURITY AND BACKUP CONFIGURATION
# ============================================================================

# Protección contra eliminación accidental (true para producción)
enable_deletion_protection = false

# Horario de backups automáticos (formato HH:MM)
backup_start_time = "03:00"

# Días de retención de backups
backup_retention_days = 7

# ============================================================================
# DOCKER IMAGES CONFIGURATION
# ============================================================================

# Tags de las imágenes Docker
backend_image_tag = "latest"
frontend_image_tag = "latest"

# ============================================================================
# COST OPTIMIZATION
# ============================================================================

# Habilitar autoescalado
enable_autoscaling = true

# Usar instancias preemptibles para ahorro de costos (puede interrumpir servicio)
enable_preemptible = false

